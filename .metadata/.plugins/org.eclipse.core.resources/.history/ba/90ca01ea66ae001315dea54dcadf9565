import java.awt.event.MouseEvent;
import java.awt.event.MouseListener;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.ImageIcon;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;


public class GUI extends JFrame implements MouseListener {
	private static final int WIDTH = 730;
	private static final int HEIGHT = 450;
	
	private int mouseX, mouseY;
	JPanel display;

	
	public GUI() {
		
		setTitle("BlackJack");
		setSize(WIDTH, HEIGHT);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		drawBoard();
		setVisible(true);
		setResizable(false);
	}
	
	private void drawBoard(){
	    JPanel panel = new JPanel(); 
	    try {
			this.setContentPane(new JLabel(new ImageIcon(ImageIO.read(new File("images/board.png")))));
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}


	}
	
	
	@Override
	public void mouseClicked(MouseEvent e) {
		mouseX = e.getX();
		mouseY = e.getY();
		if (mouseX>570 && mouseX<710){
			if(mouseY>140 && mouseY<180){
				//hit
			} else if(mouseY>183 && mouseY<220){
				//stand
			} else if(mouseY>225 && mouseY<260){
				//double down
			} else if(mouseY>260 && mouseY<300){
				//split
			} else if(mouseY>400 && mouseY<438){
				System.exit(0);
			}
			
		}
		
	}
	@Override
	public void mouseEntered(MouseEvent e) {
		//dont need
	}
	@Override
	public void mouseExited(MouseEvent e) {
		//dont need
		
	}
	@Override
	public void mousePressed(MouseEvent e) {
		//dont need
		
	}
	@Override
	public void mouseReleased(MouseEvent e) {
		//dont need
		
	}
		
	public static void main (String args[]){
		new GUI();
	}

}
	
	
	
	
	

	


