import java.applet.Applet;
import java.awt.Color;
import java.awt.Frame;
import java.awt.Graphics;
import java.awt.Image;
import java.awt.event.MouseEvent;
import java.awt.event.MouseListener;
import java.net.URL;


public class GUI extends Applet implements MouseListener {
	private static final int WIDTH = 732;
	private static final int HEIGHT = 480;
	private Image image, background;
	private URL base;
	private int mouseX, mouseY;
	private Graphics second;


	
    @Override
    public void init() {

		setSize(WIDTH, HEIGHT);
		setFocusable(true);
		addMouseListener(this);
		Frame frame = (Frame) this.getParent().getParent();
		frame.setTitle("Blackjack");
		
		try {
			base = getDocumentBase();
		} catch (Exception e) {
			// TODO: handle exception
		}
		
		background = getImage(base,"images/board.png");
	}
    
    

	@Override
	public void start() {
		repaint();
	}
	
	
	@Override
	public void paint(Graphics g) {
		g.drawImage(background, 200, 200, this);
		g.drawRect(0, 0, 300, 400);

	}
	

	
	
	
	@Override
	public void mouseClicked(MouseEvent e) {
		mouseX = e.getX();
		mouseY = e.getY();
		if (mouseX>570 && mouseX<710){
			if(mouseY>140 && mouseY<180){
				//hit
			} else if(mouseY>183 && mouseY<220){
				//stand
			} else if(mouseY>225 && mouseY<260){
				//double down
			} else if(mouseY>260 && mouseY<300){
				//split
			} else if(mouseY>400 && mouseY<438){
				System.exit(0);
			}
			
		}
		
	}
	@Override
	public void mouseEntered(MouseEvent e) {
		//dont need
	}
	@Override
	public void mouseExited(MouseEvent e) {
		//dont need
		
	}
	@Override
	public void mousePressed(MouseEvent e) {
		//dont need
		
	}
	@Override
	public void mouseReleased(MouseEvent e) {
		//dont need
		
	}
		

}
	
	
	
	
	

	


